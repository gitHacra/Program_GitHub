/* ------- */
/* 书籍页面 */
/* ------- */

/* 顶部搜索栏 */

.search {
  height: 80rpx;
  width: 100%;
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  flex-direction: row;
  justify-content: center;
}

.searchImg {
  width: 8.5%;
  height: 100%;
  background-color: #F2F4F5;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.searchTxt {
  width: 77%;
  height: 100%;
  color: #243158;
  font-size: 30rpx;
  line-height: 82rpx;
  background-color: #F2F4F5;
}

.scanImg {
  width: 10.5%;
  height: 100%;
  background-color: #F2F4F5;
  border-top-right-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}

/* 中间图片 */

.showImg {
  width: 100%;
  height: 300rpx;
}

/* tab */

.tab1 {
  width: 100%;
  height: 138rpx;
  display: flex;
  flex-direction: row;
  margin-top: 18rpx;
  border-bottom: 1rpx solid #F2F4F5;
}

.tab2 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabImg {
  width: 55rpx;
  height: 55rpx;
  padding: 12rpx;
  border-radius: 15rpx;
}

.tabTxt {
  width: 100%;
  height: 66rpx;
  color: #243158;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}

/* 图书列表 */

.book1 {
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #F2F4F5;
}

.bookImg {
  width: 136rpx;
  height: 190rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
}

.bookInfo {
	width: 490rpx;
  height: 190rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
}

.bookTxt {
	width: 100%;
  height: 48rpx;
  color: #686868;
  font-size: 27rpx;
  line-height: 48rpx;
  text-align: left;
	overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bookGrade {
	height: 48rpx;
	color: #243158;
	font-size: 27rpx;
	text-align: center;
	line-height: 48rpx;
	margin-top: 20rpx;
}

/* 图书点击背景 */
.bookHover {
  background-color: #F2F4F5;
}

