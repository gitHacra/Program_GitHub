/* 图书列表 */

.book1 {
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #F2F4F5;
}

.bookImg {
  width: 136rpx;
  height: 190rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
}

.bookInfo {
	width: 490rpx;
  height: 190rpx;
  margin-left: 25rpx;
  margin-top: 20rpx;
}

.bookTxt {
	width: 100%;
  height: 48rpx;
  color: #7a7a7a;
  font-size: 27rpx;
  line-height: 48rpx;
  text-align: left;
	overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bookGrade {
	height: 48rpx;
	color: #243158;
	font-size: 27rpx;
	text-align: center;
	line-height: 48rpx;
	margin-top: 20rpx;
}

/* 图书点击背景 */
.bookHover {
  background-color: #F2F4F5;
}