/* 图书分类页面 */
/* ---------- */

/* 空白格 */
.space {
  width: 100%;
  height: 25rpx;
  background-color: #F2F4F5;
}

/* 分类样式 */
.dir1 {
  width: 100%;
  height: 166rpx;
  display: flex;
  flex-direction: row;
}

.dir2 {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid #F2F4F5;
}

.dir3 {
  width: 45rpx;
  height: 45rpx;
  margin-top: 38rpx;
}

.dir4 {
  height: 45rpx;
  color: #2196F3;
  font-size: 26rpx;
  text-align: center;
  line-height: 45rpx;
}

.dir5 {
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.dir6 {
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #F2F4F5;
}

.dir7 {
  width: 33.3%;
  height: 50%;
  color: #243158;
  font-size: 26rpx;
  text-align: center;
  line-height: 83rpx;
  border-left: 1rpx solid #F2F4F5;
}

.dir8 {
  width: 100%;
  height: 83rpx;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #F2F4F5;
}

.dir9 {
  width: 25%;
  height: 100%;
  color: #243158;
  font-size: 26rpx;
  text-align: center;
  line-height: 83rpx;
  border-left: 1rpx solid #F2F4F5;
}

.dir10 {
  width: 25%;
  height: 100%;
  color: #243158;
  font-size: 26rpx;
  text-align: center;
  line-height: 83rpx;
  border-left: 1rpx solid #FFFFFF;
}

/* 点击样式 */
.dirHover {
  background-color: #F2F4F5;
  border: 1rpx solid #6C7CAA;
}